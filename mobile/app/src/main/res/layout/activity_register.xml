<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_bg"
    tools:context=".ui.RegisterActivity">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:minHeight="@dimen/spacing_xxl"
            android:paddingStart="@dimen/spacing_lg"
            android:paddingEnd="@dimen/spacing_lg"
            android:paddingTop="@dimen/spacing_xl"
            android:paddingBottom="@dimen/spacing_xl">

            <!-- Auth Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:cardBackgroundColor="@color/bg_white"
                app:cardCornerRadius="@dimen/border_radius_card"
                app:cardElevation="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_xl">

                    <!-- Title with Icon -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_marginBottom="@dimen/spacing_lg">

                        <ImageView
                            android:layout_width="@dimen/icon_size"
                            android:layout_height="@dimen/icon_size"
                            android:src="@drawable/ic_user"
                            android:contentDescription="User icon"
                            android:tint="@color/primary_blue"
                            android:layout_marginEnd="@dimen/spacing_md" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Register"
                            android:textSize="@dimen/text_h1"
                            android:textStyle="bold"
                            android:textColor="@color/text_dark" />
                    </LinearLayout>

                    <!-- First Name Field -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="First Name"
                        android:textSize="@dimen/text_label"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:layout_marginBottom="@dimen/spacing_sm" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:background="@drawable/input_bg"
                        android:paddingStart="@dimen/spacing_md"
                        android:paddingEnd="@dimen/spacing_md"
                        android:layout_marginBottom="@dimen/spacing_lg">

                        <ImageView
                            android:layout_width="@dimen/icon_small"
                            android:layout_height="@dimen/icon_small"
                            android:src="@drawable/ic_user"
                            android:contentDescription="User icon"
                            android:tint="@color/text_secondary"
                            android:layout_marginEnd="@dimen/spacing_md" />

                        <EditText
                            android:id="@+id/firstName"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:hint="First name"
                            android:textSize="@dimen/text_body"
                            android:textColor="@color/text_primary"
                            android:textColorHint="@color/text_light"
                            android:background="@android:color/transparent"
                            android:paddingStart="0dp" />
                    </LinearLayout>

                    <!-- Last Name Field -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Last Name"
                        android:textSize="@dimen/text_label"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:layout_marginBottom="@dimen/spacing_sm" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:background="@drawable/input_bg"
                        android:paddingStart="@dimen/spacing_md"
                        android:paddingEnd="@dimen/spacing_md"
                        android:layout_marginBottom="@dimen/spacing_lg">

                        <ImageView
                            android:layout_width="@dimen/icon_small"
                            android:layout_height="@dimen/icon_small"
                            android:src="@drawable/ic_user"
                            android:contentDescription="User icon"
                            android:tint="@color/text_secondary"
                            android:layout_marginEnd="@dimen/spacing_md" />

                        <EditText
                            android:id="@+id/lastName"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:hint="Last name"
                            android:textSize="@dimen/text_body"
                            android:textColor="@color/text_primary"
                            android:textColorHint="@color/text_light"
                            android:background="@android:color/transparent"
                            android:paddingStart="0dp" />
                    </LinearLayout>

                    <!-- Email Field -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Email"
                        android:textSize="@dimen/text_label"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:layout_marginBottom="@dimen/spacing_sm" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:background="@drawable/input_bg"
                        android:paddingStart="@dimen/spacing_md"
                        android:paddingEnd="@dimen/spacing_md"
                        android:layout_marginBottom="@dimen/spacing_lg">

                        <ImageView
                            android:layout_width="@dimen/icon_small"
                            android:layout_height="@dimen/icon_small"
                            android:src="@drawable/ic_email"
                            android:contentDescription="Email icon"
                            android:tint="@color/text_secondary"
                            android:layout_marginEnd="@dimen/spacing_md" />

                        <EditText
                            android:id="@+id/email"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:hint="Enter your email"
                            android:inputType="textEmailAddress"
                            android:textSize="@dimen/text_body"
                            android:textColor="@color/text_primary"
                            android:textColorHint="@color/text_light"
                            android:background="@android:color/transparent"
                            android:paddingStart="0dp" />
                    </LinearLayout>

                    <!-- Password Field -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Password"
                        android:textSize="@dimen/text_label"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:layout_marginBottom="@dimen/spacing_sm" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:background="@drawable/input_bg"
                        android:paddingStart="@dimen/spacing_md"
                        android:paddingEnd="@dimen/spacing_md"
                        android:layout_marginBottom="@dimen/spacing_lg">

                        <ImageView
                            android:layout_width="@dimen/icon_small"
                            android:layout_height="@dimen/icon_small"
                            android:src="@drawable/ic_lock_input"
                            android:contentDescription="Lock icon"
                            android:tint="@color/text_secondary"
                            android:layout_marginEnd="@dimen/spacing_md" />

                        <EditText
                            android:id="@+id/password"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:hint="Enter your password"
                            android:inputType="textPassword"
                            android:textSize="@dimen/text_body"
                            android:textColor="@color/text_primary"
                            android:textColorHint="@color/text_light"
                            android:background="@android:color/transparent"
                            android:paddingStart="0dp" />

                        <ImageButton
                            android:id="@+id/togglePassword"
                            android:layout_width="@dimen/icon_small"
                            android:layout_height="@dimen/icon_small"
                            android:src="@drawable/ic_eye"
                            android:contentDescription="Toggle password visibility"
                            android:background="?attr/selectableItemBackground"
                            android:scaleType="centerInside"
                            android:tint="@color/text_secondary" />
                    </LinearLayout>

                    <!-- Register Button -->
                    <Button
                        android:id="@+id/btnRegister"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:text="Register"
                        android:textSize="@dimen/text_body"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:background="@drawable/button_gradient_bg"
                        android:layout_marginTop="@dimen/spacing_md"
                        android:layout_marginBottom="@dimen/spacing_lg" />

                    <!-- Progress Bar -->
                    <ProgressBar
                        android:id="@+id/progress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:visibility="gone" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
